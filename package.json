{
  "name": "Doper",
  "publisher": "DoperAI",
  "displayName": "Doper",
  "description": "Review you code using Doper",
  "version": "0.0.4",
  "icon": "assets/img/AICodeReviewerIcon.png",
  "files": [
    "src/**",
    "assets/**"
  ],
  "galleryBanner": {
    "color": "#21214c",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "doper.doper",
        "title": "AI Code Reviewer"
      },
      {
        "command": "doper.reviewSelectedFile",
        "title": "Review with AI Code Reviewer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "doper.reviewSelectedFile",
          "when": "resourceLangId",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "openai": "^4.98.0"
  }
}
